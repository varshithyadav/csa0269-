#include <stdio.h>

int main() {
    int amount, notes = 0;
    
    // Get the amount from the user
    printf("Enter the amount: ");
    scanf("%d", &amount);
    
    // Calculate the minimum number of notes required
    while (amount >= 500) {
        notes++;
        amount -= 500;
    }
    while (amount >= 100) {
        notes++;
        amount -= 100;
    }
    while (amount >= 50) {
        notes++;
        amount -= 50;
    }
 while (amount >= 20) {
        notes++;
        amount -= 20;
    }
    while (amount >= 10) {
        notes++;
        amount -= 10;
    }
    while (amount >= 5) {
        notes++;
        amount -= 5;
    }
    while (amount >= 2) {
        notes++;
        amount -= 2;
    }
    while (amount >= 1) {
        notes++;
        amount -= 1;
    }
    
    // Print the minimum number of notes required
    printf("Minimum number of notes required: %d\n", notes);
    
    return 0;
}
